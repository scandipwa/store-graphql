<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="style-src">
            <values>
                <value id="typekit_style" type="host">*.typekit.net</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="typekit_font" type="host">*.typekit.net</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="sockjs_node" type="host">ws:</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
